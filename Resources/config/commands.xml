<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Ecommit\UtilBundle\Command\ClearApcuCommand" class="Ecommit\UtilBundle\Command\ClearApcuCommand">
            <argument>%ecommit_util.clear_apcu.url%</argument>
            <argument>%ecommit_util.clear_apcu.username%</argument>
            <argument>%ecommit_util.clear_apcu.password%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Ecommit\UtilBundle\Command\CompareLocalesCommand" class="Ecommit\UtilBundle\Command\CompareLocalesCommand">
            <argument type="service" id="Symfony\Contracts\Translation\TranslatorInterface" on-invalid="null" />
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Ecommit\UtilBundle\Command\DeployCommand" class="Ecommit\UtilBundle\Command\DeployCommand">
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Ecommit\UtilBundle\Command\GenerateEntitiesCommand" class="Ecommit\UtilBundle\Command\GenerateEntitiesCommand">
            <argument type="service" id="Ecommit\UtilBundle\Doctrine\EntityGenerator" />
            <argument type="service" id="Doctrine\Persistence\ManagerRegistry" on-invalid="null" />
            <tag name="console.command"/>
        </service>

        <service id="Ecommit\UtilBundle\Command\InstallCommand" class="Ecommit\UtilBundle\Command\InstallCommand">
            <tag name="console.command"/>
        </service>

        <service id="Ecommit\UtilBundle\Command\UpgradeCommand" class="Ecommit\UtilBundle\Command\UpgradeCommand">
            <tag name="console.command"/>
        </service>
    </services>
</container>
