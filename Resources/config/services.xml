<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  
  <services>
    <service id="Ecommit\UtilBundle\Helper\UtilHelper" class="Ecommit\UtilBundle\Helper\UtilHelper" public="true" />
    <service id="ecommit_util.helper" alias="Ecommit\UtilBundle\Helper\UtilHelper" public="true" />

    <service id="Ecommit\UtilBundle\Twig\UtilExtension" class="Ecommit\UtilBundle\Twig\UtilExtension">
        <argument type="service" id="Ecommit\UtilBundle\Helper\UtilHelper" />
        <tag name="twig.extension" />
    </service>

    <service id="Ecommit\UtilBundle\Doctrine\ClearEntityManager" class="Ecommit\UtilBundle\Doctrine\ClearEntityManager" public="true">
        <argument type="service" id="Doctrine\Persistence\ManagerRegistry" on-invalid="null" />
    </service>
    <service id="ecommit_util.clear_entity_manager" alias="Ecommit\UtilBundle\Doctrine\ClearEntityManager" public="true" />

    <service id="Ecommit\UtilBundle\Doctrine\EntityGenerator" class="Ecommit\UtilBundle\Doctrine\EntityGenerator">
        <argument type="service" id="Doctrine\Persistence\ManagerRegistry" on-invalid="null" />
        <argument type="service" id="Twig\Environment" on-invalid="null" />
    </service>
  </services>
</container>
