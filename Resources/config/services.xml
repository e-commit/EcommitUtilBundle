<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  
  <parameters>
      <parameter key="ecommit_util.helper.class">Ecommit\UtilBundle\Helper\UtilHelper</parameter>
      <parameter key="ecommit_util.twig.util_extension.class">Ecommit\UtilBundle\Twig\UtilExtension</parameter>
      <parameter key="ecommit_util.cache.class">Ecommit\UtilBundle\Cache\Cache</parameter>
  </parameters>
  
  <services>
    <service id="ecommit_util.helper" class="%ecommit_util.helper.class%">
    </service>

    <service id="ecommit_util.twig.util_extension" class="%ecommit_util.twig.util_extension.class%">
        <argument type="service" id="ecommit_util.helper" />
        <tag name="twig.extension" />
    </service>
    
    <service id="ecommit_util.cache" class="%ecommit_util.cache.class%" abstract="true" public="false">
         <argument /> <!-- Options -->
    </service>
  </services>
</container>